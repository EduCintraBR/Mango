@using Mango.Web.Models.Dto;
@model RegistrationRequestDto

<form method="post">
    <div class="container col-12 col-md-6 border p-2">
        <div class="row text-center">
            <h1 class="p-4">Faça seu cadastro</h1>
        </div>
        <div class="row pb-2 justify-content-center">
            <div class="col-12 col-md-10 pb-2">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email..." />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <div class="col-12 col-md-10 pb-2">
                <input asp-for="Name" type="text" class="form-control" placeholder="Nome..." />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="col-12 col-md-10 pb-2">
                <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Celular..." />
                <span asp-validation-for="PhoneNumber" class="text-danger" />
            </div>
            <div class="col-12 col-md-10 pb-2">
                <input asp-for="Password" type="password" class="form-control" placeholder="Senha..." />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="col-12 col-md-8 pt-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Cadastrar-se</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}